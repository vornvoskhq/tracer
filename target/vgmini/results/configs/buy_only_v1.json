{
  "name": "buy_only_v1",
  "description": "BUY-only strategy test - optimized for buy signals only, no sell model competition",
  "symbols": [
    "SPY",
    "QQQ",
    "IWM",
    "DIA"
  ],
  "start_date": "2022-01-01",
  "end_date": "2024-01-01",
  "buy_threshold": 0.012,
  "sell_threshold": 0.050,
  "buy_forecast_horizon": 7,
  "sell_forecast_horizon": 7,
  "confidence_threshold": 0.70,
  "ema_periods": [
    9,
    30,
    200
  ],
  "volume_window": 20,
  "test_size": 0.2,
  "class_weight": "balanced",
  "penalty": "l1",
  "solver": "saga",
  "max_iter": 2000,
  "tol": 1e-6,
  "initial_capital": 100000.0,
  "commission": 0.001,
  "max_position_size": 0.15,
  
  "technical_indicators": {
    "rsi": {
      "period": 14,
      "oversold_threshold": 25,
      "overbought_threshold": 75
    },
    "macd": {
      "fast_period": 8,
      "slow_period": 21,
      "signal_period": 5
    },
    "bollinger_bands": {
      "period": 20,
      "std_dev": 2
    },
    "momentum": {
      "window": 5,
      "std_window": 15,
      "std_multiplier": 1.2
    },
    "roc_periods": [5, 10, 20],
    "volume_roc_periods": [5, 10]
  },
  
  "enabled_features": [
    "price_roc_10",
    "price_roc_5",
    "price_roc_20",
    "price_above_ema30",
    "price_above_ema200",
    "ema9_above_ema30",
    "ema30_above_ema200",
    "macd_above_signal",
    "macd_positive_hist",
    "ema_spread_accelerating",
    "price_ema_separation_accel",
    "volume_ratio",
    "volume_above_average",
    "price_momentum_strong"
  ],
  
  "analysis": {
    "interpretability_sample_size": 1000,
    "lime_sample_size": 100,
    "lime_max_samples": 100,
    "min_valid_target_ratio": 0.8,
    "max_correlation_threshold": 0.95,
    "rolling_sharpe_window": 60,
    "trading_days_per_year": 252
  },
  
  "visualization": {
    "dpi": 300,
    "figure_size": [12, 8]
  }
}