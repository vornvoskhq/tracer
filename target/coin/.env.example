# GeoMining Token Configuration
# Copy this file to .env and fill in your values

# Solana Network Configuration
SOLANA_NETWORK=devnet
# Options: devnet, testnet, mainnet-beta

# RPC URLs (optional - defaults provided)
DEVNET_RPC_URL=https://api.devnet.solana.com
TESTNET_RPC_URL=https://api.testnet.solana.com
MAINNET_RPC_URL=https://api.mainnet-beta.solana.com

# Token Configuration
TOKEN_NAME=GeoToken
TOKEN_SYMBOL=GEO
TOKEN_DECIMALS=9
INITIAL_SUPPLY=1000000000

# Treasury Distribution (percentages)
MINING_REWARDS_PERCENT=60
TEAM_PERCENT=20
MARKETING_PERCENT=10
RESERVE_PERCENT=10

# Reward Configuration
BASE_REWARD=10.0
DISTANCE_BONUS_PER_KM=0.1
TIME_BONUS_PER_HOUR=0.5
STREAK_MULTIPLIER=1.2
MAX_DAILY_REWARDS=10
MIN_DISTANCE_METERS=100
MIN_TIME_HOURS=1.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security (for production)
JWT_SECRET_KEY=your-secret-key-here
ADMIN_API_KEY=your-admin-key-here

# Database (for production)
DATABASE_URL=sqlite:///geomining.db
# For PostgreSQL: postgresql://user:password@localhost/geomining

# CORS Configuration
ALLOWED_ORIGINS=["*"]
# For production: ["https://yourdomain.com", "https://www.yourdomain.com"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=geomining.log